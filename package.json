{
	"name": "infranodus-mcp-server",
	"version": "1.0.0",
	"description": "InfraNodus MCP server",
	"type": "module",
	"module": "src/index.ts",
	"main": "dist/index.js",
	"bin": {
		"infranodus-mcp-server": "./dist/index.js"
	},
	"scripts": {
		"build": "npx @smithery/cli build",
		"build:inspect": "tsc",
		"dev": "npx @smithery/cli dev",
		"watch": "tsc --watch",
		"inspect": "npm run build:inspect && npx @modelcontextprotocol/inspector node dist/index.js",
		"start": "npm run build:inspect && node dist/index.js"
	},
	"dependencies": {
		"@modelcontextprotocol/sdk": "^1.18.0",
		"dotenv": "^16.6.1"
	},
	"devDependencies": {
		"@modelcontextprotocol/inspector": "latest",
		"@smithery/cli": "^1.4.3",
		"@smithery/sdk": "^1.6.7",
		"@types/dotenv": "^6.1.1",
		"@types/node": "^20.0.0",
		"typescript": "^5.0.0"
	}
}
